@page "{id}"
@using LetsGoPark.WebSite.Services
@inject JsonFileParksService ParksService
@model LetsGoPark.WebSite.Pages.DeleteParkModel

@{
    ViewData["Title"] = "Delete page";
}

<h1>Delete</h1>

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(x => x.Park.Id)

        <div class="form-group">
            <label asp-for="Park.Title" class="control-label"></label>
            <input asp-for="Park.Title" class="form-control" />
            <span asp-validation-for="Park.Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Park.Description" class="control-label"></label>
            <input asp-for="Park.Description" class="form-control" />
            <span asp-validation-for="Park.Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Park.Url" class="control-label"></label>
            <input asp-for="Park.Url" class="form-control" />
            <span asp-validation-for="Park.Url" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Park.Image" class="control-label"></label>
            <input asp-for="Park.Image" class="form-control" />
            <span asp-validation-for="Park.Image" class="text-danger"></span>
        </div>

        <h1>Confirm Delete of this item</h1>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }