    string dateTime = Request.Query["dateTime"];
    string description = Request.Query["description"];
    string token = Request.Query["token"];
    //Old comment:
    string[] oldComment = { name, dateTime, description, token };
    //New comment:
    string[] newComment = oldComment;
}

<!--Renders Udpdate.razor to populate Delete page.-->
@(await Html.RenderComponentAsync<DeleteComment>(
        RenderMode.ServerPrerendered, new
        {
            CommentIndex = commentIndex,
            SelectedParkId = selectedParkId,
            Name = name,
            DateTime = dateTime,
            Description = description,
            Token = token
        }))

<script src="_framework/blazor.server.js"></script>

